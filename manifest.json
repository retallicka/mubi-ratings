{
  "manifest_version": 2,

  "name": "Mubi Ratings",
  "description": "Shows Rotten Tomato ratings when browsing Mubi",
  "version": "0.9",

  "permissions": [
    "http://api.rottentomatoes.com/",
    "http://*.mubi.com/",
    "http://uk.mubi.com/",
    "https://uk.mubi.com/",
    "tabs"
  ],

  "page_action": {
    "default_icon": "assets/icon2.png",
    "default_title": "Mubi Ratings",
    "default_popup": "mubiratings.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*.mubi.com/*"],
      "js": ["js/jquery.js", "js/mubiratings.js"]
    }
  ],

  "web_accessible_resources": [
    "js/jquery-1.10.2.min.map",
    "css/styles.css",
    "assets/smalltomato.png"
  ],

  "icons": {
      "16": "assets/16.png",
      "48": "assets/48.png",
      "128": "assets/128.png"
    },

  "author": "Vickie Retallick"
}